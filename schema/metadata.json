{
  "id": "metadata.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for metadata section",
  "type": "object",
  "required": ["contact", "dateStamp", "identificationInfo"],
  "additionalProperties": false,
  "properties": {
    "fileIdentifier": {
      "type": "string"
    },
    "language": {
      "type": "string"
    },
    "characterInfo": {
      "type": "string"
    },
    "hierarchyLevel": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "contact": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "contacts.json#/definitions/contactRef"
      }
    },
    "dateStamp": {
      "$ref": "../schema.json#definitions/date"
    },
    "metadataStandardName": {
      "type": "string"
    },
    "metadataStandardVersion": {
      "type": "string"
    },
    "dataSetURI": {
      "type": "string"
    },
    "spatialReference": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "identificationInfo": {
      "$ref": "./dataIdentification.json#"
    },
    "distributionInfo": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "./distributor.json#"
      }
    },
    "dataQualityInfo": {
      "type": "array",
      "items": {
        "$ref": "./dataQuality.json#"
      }
    },
    "metadataMaintenance": {
      "$ref": "./maintInfo.json#"
    }
  }
}