{
  "id": "citation.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for citation",
  "type": "object",
  "required": ["title", "date"],
  "allOf": [
    {
      "$ref": "#/definitions/citationMain"
    }
  ],
  "definitions": {
    "citationBase": {
      "title": "base citation",
      "description": "base schema for citation, date not required",
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string"
        },
        "date": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["date", "dateType"],
            "properties": {
              "date": {
                "$ref": "../schema.json#/definitions/date"
              },
              "dateType": {
                "type": "string"
              }
            }
          }
        },

        "responsibleParty": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "contact.json#/definitions/contactRef"
          }
        },

        "onlineResource": {
          "type": "array",
          "items": {
            "$ref": "onlineResource.json#"
          }
        }
      }
    },
    "citationMain": {
      "type": "object",
      "title": "citation",
      "properties": {
        "edition": {
          "type": "string"
        },
        "presentationForm": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "additionalIdentifier": {
          "type": "object",
          "properties": {
            "doi": {
              "type": "string"
            },
            "isbn": {
              "type": "string"
            },
            "issn": {
              "type": "string"
            }
          }
        }
      },
      "allOf": [
        {
          "$ref": "#/definitions/citationBase"
        }
      ]
    },
    "resourceIdentifier": {
      "title": "resource identifier",
      "description": "Assigned identifier for a resource, based on citation",
      "type": "object",
      "required": ["identifier"],
      "properties": {
        "identifier": {
          "type": "string"
        }
      },
      "allOf": [
        {
          "$ref": "#/definitions/citationBase"
        }
      ]
    }
  }
}