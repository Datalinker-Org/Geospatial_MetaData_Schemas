{
  "id": "contact.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "An array of contacts to be referenced throughout the metadata, contains references for both individuals and organizations.",
  "example": "../../examples/contact.json#/0",
  "translation": {
    "ISO 19115-2": ["Contact > CI_ResponsibleParty"],
    "FGDC CSDGM": ["cntinfo"]
  },
  "type": "array",
  "minItems": 1,
  "uniqueItems": true,
  "items": {
    "type": "object",
    "title": "contact",
    "description": "Contact information for a person.",
    "example": "../../examples/contact.json#/0",
    "translation": {
      "ISO 19115-2": ["Contact > CI_ResponsibleParty"],
      "FGDC CSDGM": ["cntinfo"]
    },
    "required": ["contactId"],
    "additionalProperties": true,
    "properties": {
      "contactId": {
        "type": "string"
      },
      "positionName": {
        "type": "string"
      },
      "address": {
        "$ref": "#/definitions/address"
      },
      "onlineResource": {
        "type": "array",
        "items": {
          "$ref": "onlineResource.json#"
        },
        "uniqueItems": true
      },
      "contactInstructions": {
        "type": "string"
      },
      "phoneBook": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/phone"
        }
      }
    },
    "anyOf": [
      {
        "$ref": "#/definitions/individual"
      }, {
        "$ref": "#/definitions/organization"
      }
    ]
  },
  "definitions": {
    "phone": {
      "type": "object",
      "required": ["phoneNumber"],
      "properties": {
        "phoneName": {
          "type": "string"
        },
        "phoneNumber": {
          "type": "string",
          "pattern": "^[0-9+()#. \/ext-]+$"
        },
        "service": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    },
    "address": {
      "type": "object",
      "properties": {
        "deliveryPoint": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "city": {
          "type": "string"
        },
        "administrativeArea": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "electronicMailAddress": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^.+@.+\\..+$"
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    },
    "individual": {
      "type": "object",
      "title": "individual",
      "description": "Contact information for a person.",
      "example": "../../examples/contact.json#/0",
      "translation": {
        "ISO 19115-2": ["Contact > CI_ResponsibleParty"],
        "FGDC CSDGM": ["cntinfo"]
      },
      "required": ["individualName"],
      "additionalProperties": true,
      "properties": {
        "individualName": {
          "type": "string"
        }
      }
    },
    "organization": {
      "type": "object",
      "title": "organization",
      "required": ["organizationName"],
      "additionalProperties": true,
      "properties": {
        "organizationName": {
          "type": "string"
        }
      }
    },
    "contactRef": {
      "type": "object",
      "additionalProperties": true,
      "required": ["contactId", "role"],
      "properties": {
        "contactId": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      }
    }
  }
}